---
import Base from "../layouts/Base.astro";

const title = "How It Works | Haven & Hand";
const description = "A premium, predictable handyman experience from request to completion.";
---
<Base {title} {description}>
  <section class="hero hero-slim" data-reveal>
    <div class="container hero-inner">
      <div class="hero-copy">
        <p class="eyebrow">How it works</p>
        <h1>Premium service without the usual trade-off.</h1>
        <p class="lead">Clear scope, precise scheduling, and flawless execution with a concierge touch.</p>
        <div class="cta-row">
          <a class="btn btn-primary" href="/contact">Book a Consultation</a>
          <a class="btn btn-ghost" href="/services">Explore Services</a>
        </div>
      </div>
      <div class="hero-card">
        <div class="card-header">Response time</div>
        <div class="card-body">
          <div class="slot">Within 24 hours</div>
          <p class="muted">Priority scheduling for managed properties.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="section" data-reveal>
    <div class="container">
      <div class="section-head">
        <h2>Three steps, zero friction.</h2>
      </div>
      <div class="grid-3">
        <div class="step">
          <span class="step-number">01</span>
          <h3>Request</h3>
          <p class="muted">Send your project details and preferred time window.</p>
        </div>
        <div class="step">
          <span class="step-number">02</span>
          <h3>Assess</h3>
          <p class="muted">We confirm scope and provide a transparent quote.</p>
        </div>
        <div class="step">
          <span class="step-number">03</span>
          <h3>Complete</h3>
          <p class="muted">We execute with precision and follow up with a quality check.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="section split" data-reveal>
    <div class="container split-inner">
      <div>
        <p class="eyebrow">Experience</p>
        <h2>Designed for high-end properties and busy schedules.</h2>
        <ul class="list">
          <li>Pre-visit checklists and arrival alerts</li>
          <li>On-site protection and clean wrap-up</li>
          <li>Post-service documentation and warranty</li>
        </ul>
      </div>
      <div class="panel">
        <div class="panel-metric">
          <span class="metric">1:1</span>
          <span class="muted">Dedicated project lead</span>
        </div>
        <div class="panel-metric">
          <span class="metric">24h</span>
          <span class="muted">Scheduling confirmation</span>
        </div>
        <div class="panel-metric">
          <span class="metric">30d</span>
          <span class="muted">Workmanship follow-up</span>
        </div>
      </div>
    </div>
  </section>

  <section class="section faq" data-reveal>
    <div class="container">
      <div class="section-head">
        <h2>Frequently asked questions</h2>
      </div>
      <div class="faq-grid">
        <div class="card">
          <h3>Do you handle multi-property accounts?</h3>
          <p class="muted">Yes. We provide dedicated scheduling and reporting for landlords and managers.</p>
        </div>
        <div class="card">
          <h3>What does the estimate include?</h3>
          <p class="muted">A detailed scope, timeline, and itemized cost based on your property needs.</p>
        </div>
        <div class="card">
          <h3>Are you licensed and insured?</h3>
          <p class="muted">Fully licensed, insured, and background-checked on every assignment.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="section cta-panel" data-reveal>
    <div class="container cta-inner">
      <div>
        <h2>Ready for a white-glove experience?</h2>
        <p class="muted">We'll confirm your request within 24 hours.</p>
      </div>
      <a class="btn btn-primary" href="/contact">Book a Consultation</a>
    </div>
  </section>
</Base>
