---
import Base from "../layouts/Base.astro";

const title = "Standards | Haven & Hand";
const description = "Our service philosophy, standards, and commitment to premium craftsmanship.";
---
<Base {title} {description}>
  <section class="hero hero-slim" data-reveal>
    <div class="container hero-inner">
      <div class="hero-copy">
        <p class="eyebrow">Standards</p>
        <h1>Built for discerning properties.</h1>
        <p class="lead">We combine craftsmanship, accountability, and white-glove care for every visit.</p>
        <div class="cta-row">
          <a class="btn btn-primary" href="/contact">Book a Consultation</a>
          <a class="btn btn-ghost" href="/portfolio">View Results</a>
        </div>
      </div>
      <div class="hero-card">
        <div class="card-header">Our promise</div>
        <div class="card-body">
          <div class="slot">Workmanship guarantee</div>
          <p class="muted">Clean, precise, and fully insured.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="section" data-reveal>
    <div class="container">
      <div class="section-head">
        <h2>Service philosophy</h2>
        <p class="muted">Protect your assets while elevating everyday living.</p>
      </div>
      <div class="grid-3">
        <div class="card">
          <h3>Craftsmanship</h3>
          <p class="muted">Every cut, finish, and alignment is measured and refined.</p>
        </div>
        <div class="card">
          <h3>Accountability</h3>
          <p class="muted">Clear documentation, transparent quotes, and dependable timing.</p>
        </div>
        <div class="card">
          <h3>Respect</h3>
          <p class="muted">Quiet crews, protected spaces, and spotless wrap-up.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="section split" data-reveal>
    <div class="container split-inner">
      <div>
        <p class="eyebrow">Credentials</p>
        <h2>Licensed, insured, and built on trust.</h2>
        <ul class="list">
          <li>Fully insured and background-checked team</li>
          <li>Project reporting for owners and managers</li>
          <li>Warranty follow-up on every visit</li>
        </ul>
      </div>
      <div class="panel">
        <div class="panel-metric">
          <span class="metric">10+</span>
          <span class="muted">Years of experience</span>
        </div>
        <div class="panel-metric">
          <span class="metric">300+</span>
          <span class="muted">Luxury properties served</span>
        </div>
        <div class="panel-metric">
          <span class="metric">24h</span>
          <span class="muted">Response time</span>
        </div>
      </div>
    </div>
  </section>

  <section class="section cta-panel" data-reveal>
    <div class="container cta-inner">
      <div>
        <h2>Experience a premium standard</h2>
        <p class="muted">We're ready to support your property portfolio.</p>
      </div>
      <a class="btn btn-primary" href="/contact">Book a Consultation</a>
    </div>
  </section>
</Base>
